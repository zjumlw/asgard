<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">

    <display-name>Welcome to Asgard</display-name>
    <description>Welcome to Asgard</description>

    <context-param>
       <param-name>log4jContextName</param-name>
       <param-value>star</param-value>
    </context-param>

    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>/WEB-INF/log4j2.xml</param-value>
    </context-param>

    <filter>
        <filter-name>log4jServletFilter</filter-name>
        <filter-class>org.apache.logging.log4j.web.Log4jServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>log4jServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.will.asgard.service.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>simple</filter-name>
        <filter-class>com.will.asgard.service.filter.SimpleFilter</filter-class>
        <init-param>
            <param-name>ref</param-name>
            <param-value>WILLMAO</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>simple</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.will.asgard.service.listener.ServletContextListenerDemo</listener-class>
    </listener>
    <listener>
        <listener-class>com.will.asgard.service.listener.ServletContextAttributeListenerDemo</listener-class>
    </listener>
    <listener>
        <listener-class>com.will.asgard.service.listener.HttpSessionListenerDemo</listener-class>
    </listener>
    <listener>
        <listener-class>com.will.asgard.service.listener.HttpSessionAttributeListenerDemo</listener-class>
    </listener>
    <listener>
        <listener-class>com.will.asgard.service.listener.ServletRequestListenerDemo</listener-class>
    </listener>
    <listener>
        <listener-class>com.will.asgard.service.listener.ServletRequestAttributeListenerDemo</listener-class>
    </listener>

    <!-- servlet -->
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.will.asgard.service.hello.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>input</servlet-name>
        <servlet-class>com.will.asgard.service.hello.InputServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>life</servlet-name>
        <servlet-class>com.will.asgard.service.hello.LifeCycleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>initparam</servlet-name>
        <servlet-class>com.will.asgard.service.hello.InitParamServlet</servlet-class>
        <init-param>
            <param-name>ref</param-name>
            <param-value>www.will.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>sessiondemo</servlet-name>
        <servlet-class>com.will.asgard.service.hello.HttpSessionDemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>applicationdemo</servlet-name>
        <servlet-class>com.will.asgard.service.hello.ServletContextDemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clientredirect</servlet-name>
        <servlet-class>com.will.asgard.service.hello.ClientRedirectDemo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>serverredirect</servlet-name>
        <servlet-class>com.will.asgard.service.hello.ServerRedirectDemo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.will.asgard.service.hello.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>elServlet</servlet-name>
        <servlet-class>com.will.asgard.service.hello.ELServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ELListServlet</servlet-name>
        <servlet-class>com.will.asgard.service.hello.ELListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>com.will.asgard.service.hello.DownloadServlet</servlet-class>
        <init-param>
            <param-name>filePath</param-name>
            <param-value>/opt/tomcat/latest/work/Catalina/localhost/asgard/store</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>uploadServlet</servlet-name>
        <servlet-class>com.will.asgard.service.hello.UploadServlet</servlet-class>
        <init-param>
            <param-name>filePath</param-name>
            <param-value>/opt/tomcat/latest/work/Catalina/localhost/asgard/store</param-value>
        </init-param>
        <init-param>
            <param-name>tempFilePath</param-name>
            <param-value>/opt/tomcat/latest/work/Catalina/localhost/asgard/temp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>cookie</servlet-name>
        <servlet-class>com.will.asgard.service.hello.CookieServlet</servlet-class>
    </servlet>

    <!-- servlet mapping -->
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>input</servlet-name>
        <url-pattern>/input</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>life</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>initparam</servlet-name>
        <url-pattern>/initparam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessiondemo</servlet-name>
        <url-pattern>/sessiondemo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>applicationdemo</servlet-name>
        <url-pattern>/applicationdemo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>clientredirect</servlet-name>
        <url-pattern>/clientredirect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>serverredirect</servlet-name>
        <url-pattern>/serverredirect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>elServlet</servlet-name>
        <url-pattern>/elServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ELListServlet</servlet-name>
        <url-pattern>/elListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadServlet</servlet-name>
        <url-pattern>/uploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cookie</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>MySql Connection</description>
        <res-ref-name>jdbc/asgard</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <jsp-config>
        <taglib>
            <taglib-uri>will_tag</taglib-uri>
            <taglib-location>/WEB-INF/willtag.tld</taglib-location>
        </taglib>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
